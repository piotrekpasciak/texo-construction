<div id="page-wrapper">
  <h1 class="page-header">Managing projects</h1>

  <%= link_to 'Dodaj Projekt', new_project_path, :class => "admin-add-button btn btn-outline btn-success" %>

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 admin-table-wrapper">
      <table class="panel panel-default table table-striped table-bordered table-hover">
        <thead class="panel-heading">
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Location</th>
          <th>Owner</th>
          <th>Company</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody class="panel-body">
        <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.content %></td>
              <td><%= project.location %></td>
              <td><%= project.owner %></td>
              <td><%= project.company %></td>
              <td class="admin-buttons-wrapper"><%= link_to 'Show', project, :class => "btn btn-outline btn-success" %></td>
              <td class="admin-buttons-wrapper"><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-outline btn-warning" %></td>
              <td class="admin-buttons-wrapper"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
