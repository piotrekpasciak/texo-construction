<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Main</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag(image.photo.url(:thumb)) %></td>
        <td><%= image.main %></td>
        <td><%= link_to 'Show', project_image_path(@project, image) %></td>
        <td><%= link_to 'Edit', edit_project_image_path(@project, image) %></td>
        <td><%= link_to 'Destroy', project_image_path(@project, image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

